@model SellYourStuff.ModelViews.SearchView
<div class="well-lg">
    <div class="row">
        @using (Html.BeginForm("Index","Product"))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-6">
                <div class="input-group">
                    <input name="searchString" type="text" class="form-control" placeholder="Search" aria-describedby="basic-addon1">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>

                    </div>
                    @Html.DropDownList("SelectedCategory", Model.dropDown , "All Products", htmlAttributes: new { @onchange = "form.submit();", @class = "form-control" })
                </div><!-- /input-group -->
            </div>
        }
    </div>
</div>
<hr />

