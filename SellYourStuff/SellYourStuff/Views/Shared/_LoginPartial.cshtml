@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
     <!-- BEGIN TOP NAVIGATION MENU -->
        <div class="top-menu">
            <ul class="nav navbar-nav pull-right">

                <!-- BEGIN INBOX DROPDOWN -->
                <li class="dropdown dropdown-extended dropdown-inbox" id="header_inbox_bar">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        <i class="glyphicon glyphicon-envelope"></i>
                        <span class="badge badge-danger">@*@Model.Where(o => o.IsSeen==false).Count()*@ 0</span>
                    </a>
                </li>
                <!-- END INBOX DROPDOWN -->
                <!-- BEGIN USER LOGIN DROPDOWN -->
                <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
                <li class="dropdown dropdown-user">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        <div class="dropdown-user-inner">
                            <span class="username username-hide-on-mobile"> @User.Identity.GetUserName() </span>
                            <img alt="" src="https://cdn3.iconfinder.com/data/icons/user-avatars-1/512/users-10-3-128.png" />
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-default">
                        <li>
                            <a href="Manage">
                                <i class="icon-user"></i> My Profile
                            </a>
                        </li>
                        <li>
                            <a href="/Product/Create">
                                <i class="icon-calendar"></i> Announce
                            </a>
                        </li>
                        <li>
                            <a id="messageListId" href="/Message/ShowAll" data-toggle="modal">
                                <i class="icon-envelope-open"></i> My Inbox
                                <span class="badge badge-danger"> 3 </span>
                            </a>
                        </li>
                        <li>
                            <a href="page_todo.html">
                                <i class="icon-rocket"></i> My Favorites
                                <span class="badge badge-success"> 7 </span>
                            </a>
                        </li>
                        <li class="divider"> </li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="icon-key"></i> Log Out
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- END USER LOGIN DROPDOWN -->
            </ul>
        </div>
        <!-- END TOP NAVIGATION MENU -->

        @*<ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>*@
    }
}
else
{
    @*<div class="top-menu">
        <ul class="nav navbar-nav pull-right"></ul>
    </div>*@
    <div class="top-menu">
        <ul class="nav navbar-nav pull-right">
            <!-- Split button -->
            <li class="dropdown dropdown-user">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                    <div class="navbar-brand">
                        <span class="glyphicon glyphicon-log-in"></span>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-default">
                    <li>
                        <a href="@Url.Action("Login", "Account")">
                            <span class="glyphicon glyphicon-user"></span> Login
                        </a>
                    </li>
                    <li class="divider"> </li>
                    <li>
                        <a href="@Url.Action("Register", "Account")">
                            <span class="glyphicon"></span> Register
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
   </div>
}  